{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 380,
  "height": 400,
  "data": { "url": "APIMS_yearly.csv" },

  "transform": [
    { "filter": "datum.year == 2022" },
    {
      "lookup": "state",
      "from": {
        "data": { "url": "vehicle_count.csv" },
        "key": "State",
        "fields": ["Vehicle_Count"]
      }
    },
    {
      "lookup": "state",
      "from": {
        "data": { "url": "Malaysia_population_state.csv" },
        "key": "StateName",
        "fields": ["Area", "PopulationDensity"]
      }
    },
    { "calculate": "toNumber(replace(datum.Area, ',', ''))", "as": "area_num" },
    {
      "calculate": "toNumber(replace(datum.PopulationDensity, ',', ''))",
      "as": "dens_num"
    },
    { "filter": "isValid(datum.Vehicle_Count) && isValid(datum.api)" }
  ],

  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.75,
        "stroke": "#333",
        "strokeWidth": 0.7
      },
      "encoding": {
        "x": {
          "field": "Vehicle_Count",
          "type": "quantitative",
          "title": "Number of Registered Vehicles (log scale)",
          "scale": { "type": "log", "domain": [80000, 6000000] },
          "axis": { "format": "~s", "gridOpacity": 0.15 }
        },
        "y": {
          "field": "api",
          "type": "quantitative",
          "title": "Average API",
          "axis": {
            "gridOpacity": 0.15,
            "tickCount": 5
          },
          "scale": { "domain": [20, 70] }
        },
        "size": {
          "field": "area_num",
          "type": "quantitative",
          "title": "Land Area (sq km)",
          "scale": { "range": [90, 800], "domain": [0, 20000] },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "titleAnchor": "middle",
            "titleFontWeight": "bold",
            "symbolType": "circle",
            "symbolSize": 200,
            "symbolStrokeColor": "#555",
            "symbolFillColor": "#B3D9EF"
          }
        },
        "color": {
          "field": "dens_num",
          "type": "quantitative",
          "title": "Population Density",
          "scale": { "scheme": "blues", "type": "sqrt" },
          "legend": null
        },
        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "Vehicle_Count", "title": "Vehicles", "format": "," },
          { "field": "api", "title": "Average API", "format": ".1f" },
          { "field": "area_num", "title": "Area (km²)", "format": "," },
          { "field": "dens_num", "title": "Pop Density", "format": "," }
        ]
      }
    },
    {
      "transform": [{ "filter": "datum.state == 'Selangor'" }],
      "mark": { "type": "text", "align": "right", "color": "#000000" ,"fontSize": 11.5},
      "encoding": {
        "x": { "field": "Vehicle_Count", "type": "quantitative" },
        "y": { "field": "api", "type": "quantitative" },
        "text": { "value": "Selangor: most vehicles → higher API" }
      }
    },
    {
      "transform": [{ "filter": "datum.state == 'Labuan'" }],
      "mark": { "type": "text", "align": "right", "color": "#374151", "fontSize": 11.5 },
      "encoding": {
        "x": { "field": "Vehicle_Count", "type": "quantitative" },
        "y": { "field": "api", "type": "quantitative" },
        "text": { "value": "Fewer vehicles → lower API" }
      }
    },
    {
      "transform": [
        {
          "regression": "api",
          "on": "Vehicle_Count",
          "method": "linear",
          "extent": [10000, 6000000],
          "as": ["Vehicle_Count", "api"]
        }
      ],

      "mark": {
        "type": "line",
        "stroke": "#6b7280",
        "strokeDash": [4, 4],
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "Vehicle_Count",
          "type": "quantitative",
          "scale": { "type": "log", "domain": [80000, 6000000] },
          "axis": { "format": "~s" }
        },
        "y": { "field": "api", "type": "quantitative" },
        "color": { "value": "#555" }
      }
    }
  ],

  "config": {
    "font": "Roboto",
    "title": { "font": "serif", "fontSize": 25 },
    "axis": { "labelFont": "Roboto", "titleFont": "Roboto" },
    "legend": { "labelFont": "Roboto", "titleFont": "Roboto" },
    "view": { "stroke": null }
  }
}
